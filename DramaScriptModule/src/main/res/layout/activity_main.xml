<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.liangwang.dramascriptlibs.UI.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_above="@+id/tabBarAnimView"/>

    <View
        android:id="@+id/groundView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/back_oval"
        android:visibility="invisible" />

    <com.liangwang.dramascriptlibs.UI.ScriptBarView
        android:id="@+id/tabBarAnimView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
